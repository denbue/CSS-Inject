{
  "manifest_version": 2,
  "name": "CSS/JS Inject",
  "version": "6",
  "description": "Injects any hosted CSS/JS file into a any webpage and modifies the headers to allow for full prototyping power.",
  "homepage_url": "https://github.com/denbue/JS-CSS-Inject",

  "browser_action": {
    "default_title": "CSS/JS Inject",
    "default_icon": "images/icon128.png"
  },

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "options_page": "options.html",

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["loadcss.js"]
  }],

  "permissions": [
    "webRequest", "webRequestBlocking", "tabs", "http://*/*", "https://*/*"
  ]
}
